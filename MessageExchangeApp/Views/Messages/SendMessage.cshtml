<form method="post" asp-action="SendMessage" class="form-inline">
    <div class="form-group">
        <input type="text" name="Text" class="form-control" maxlength="128" placeholder="Enter message" required />
    </div>
    <div class="form-group">
        <input type="number" name="SequentialNumber" class="form-control" placeholder="Enter sequential number" required />
    </div>
    <button type="submit" class="btn btn-primary">Send Message</button>
</form>
